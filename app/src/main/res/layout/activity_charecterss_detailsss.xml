<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CharecterssDetailsss">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="character Details">
        </TextView>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10dp"
        android:id="@+id/name"
        android:textStyle="bold"
        android:text="Name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:id="@+id/hight"
        android:textStyle="bold"
        android:text="height"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10dp"
        android:id="@+id/haircolor"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="Hair Color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/skincolor"
        android:textStyle="bold"
        android:text="Skin Color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/eyecolor"
        android:textStyle="bold"
        android:text="eye color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/gender"
        android:textStyle="bold"
        android:text="gender"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/mass"
        android:textStyle="bold"
        android:text="Mass"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/birth_year"
        android:textStyle="bold"
        android:text="Birth Year"/>

</LinearLayout>